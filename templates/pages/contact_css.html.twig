{% extends 'base.html.twig' %}

{% block title %} Guided Match Journey - searched for {{searchBy}}  - {{pageTitle}}{% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}{% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="--govuk-width-container">
        <div class="govuk-width-container">
            {{ include('includes/phase_banner.html.twig') }}

            <main class="govuk-main-wrapper" id="main-content">
             
                    <div class="govuk-grid-row">
                        <h1 class="govuk-heading-xl page-title govuk-!-margin-bottom-5">Before you contact CCS</h1>
                        <p>
                            It can help to keep a record of your answers to share with us so we can understand what framework is best for you.
                         </p>  
                        {% include "/results_page_items/answers.html.twig" with {'lotstTitle': '', 'changeAnswer':1} %}
                    </div>
             
              <div>
                <div class="contact-ccs-btn">
                    <button onclick="window.print();" type="button" class="app-c-print-link__link" rel="alternate">
                        Print this page
                    </button>
                </div>
                <div class="contact-ccs-btn">
                <a href="https://www.crowncommercial.gov.uk/contact"> 
                    <button class="govuk-button" data-module="govuk-button">Contact CCS </button>
                </a>
                </div>

                 <div class="contact-ccs-btn">
                    <a href="{{ path('start-journey', {'journeyUuid': journeyId})}}?q={{searchBy}}"> 
                    <button class="govuk-button govuk-button--secondary" data-module="govuk-button">
                        Start againg to change your answers
                    </button>
                    </a>  
                </div>
              </div>
            </main>
        </div>
    </div>
{% endblock %}