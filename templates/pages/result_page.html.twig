{% extends 'base.html.twig' %}

{% block title %}Guided Match{% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}{% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="--govuk-width-container">
        <div class="govuk-width-container">
            <div class="govuk-phase-banner">
                <p class="govuk-phase-banner__content">
                    <strong class="govuk-tag govuk-phase-banner__content__tag "> beta </strong>
                    <span class="govuk-phase-banner__text">
                        This is a new service â€“ your
                        <a class="govuk-link" href="https://www.smartsurvey.co.uk/s/QWDZX/">feedback</a>
                        will help us to improve it.
                    </span>
                </p>
            </div>
            <div class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="#">Home</a>
                    </li>
                    <li aria-current="page" class="govuk-breadcrumbs__list-item"> Results</li>
                </ol>
            </div>
            <main class="govuk-main-wrapper" id="main-content" role="main">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">
                        <div>
                            <h2 class="govuk-heading-xl page-title govuk-!-margin-bottom-2">Based on your answers, there are </h2>
                            <h2 class="govuk-heading-xl page-title"><strong>{{countFrameworks}} frameworks that match your needs
                             {% if  countLots > 0 %}
                                and {{countLots}}
                                 {% if  countLots == 1 %}
                                    lot
                                    {% else %}
                                    lots
                                {% endif %}
                             
                             {% endif %}
                             
                            </strong></h2>
                        </div>
                        <div class="govuk-grid-column-one-quarter"><h4 class="govuk-heading-s">Contents:</h4>
                            <ul class="govuk-list govuk-list--bullet">
                                <li><a class="govuk-link" href="#recommendations">Recommendations</a></li>
                                <li><a class="govuk-link" href="#options">What are your options</a></li>
                                <li><a class="govuk-link" href="#defintions">Definitions</a></li>
                                <li><a class="govuk-link" href="#answers">Your answers</a></li>
                            </ul>
                        </div>   

                        <div class="govuk-grid-column-three-quarters">
                            <h2 class="govuk-heading-l" id="recommendations">Recommendations</h2>
                            {% set lotstTitle = '' %}
                           
                           
                            {% for framework in frameworks %}
                               
                                {% set lotstTitle = framework.lotsTitle %}
                              
                                <div class="govuk-accordion" data-module="govuk-accordion"id="accordion-with-summary-sections">
                                    <div class="govuk-accordion__section ">
                                        <div class="govuk-accordion__section-header">
                                            <h2 class="govuk-accordion__section-heading">
                                                <span class="govuk-accordion__section-button"
                                                    id="accordion-with-summary-sections-heading-1"
                                                    style="color:black">
                                                    <strong>
                                                       {{framework.name}}, {{framework.lotsTitle}}
                                                    </strong>
                                                </span>
                                            </h2>
                                            <div class="govuk-accordion__section-summary govuk-body"
                                                id="accordion-with-summary-sections-summary-1">
                                                <a class="angular-link" href="#">Hide Details</a>
                                            </div>
                                        </div>
                                        <div aria-labelledby="accordion-with-summary-sections-heading-1"
                                            id="accordion-with-summary-sections-content-1">
                                            <p>
                                                <strong>Framework ID:</strong>
                                                 {{framework.number}}
                                                <strong>End Date:</strong>
                                                {{ framework.endDate|date("m/d/Y") }}

                                            </p>
                                            <p> {{framework.description}}</p>
                                            <div>
                                            {% if  framework.lots is defined %}
                                                {% include "/results_page_items/lots.html.twig" %}
                                            {% endif %}
                                            </div>
                                            <a class="download" href="">
                                                <svg height="32" viewBox="0 0 42 32" width="42" xmlns="http://www.w3.org/2000/svg">
                                                    <g fill="none" fill-rule="evenodd">
                                                        <path d="m0 0h32.9985352l9.0014648 8.97912598v23.02087402h-42z"
                                                            fill="#ae0c0c">
                                                        </path>
                                                        <text fill="#fff"
                                                            font-family="SourceSansPro-Semibold, Source Sans Pro"
                                                            font-size="15" font-weight="500">
                                                            <tspan x="5.485" y="22">.PDF</tspan>
                                                        </text>
                                                        <path d="m33 0h9v9z" fill="#000"
                                                            opacity=".59654" transform="matrix(-1 0 0 -1 75 9)">
                                                        </path>
                                                    </g>
                                                </svg>Download customer guidance document</a>
                                            <br><br>
                                            <a style="font-size: 19px" target="_blank"
                                            href="https://www.crowncommercial.gov.uk/agreements/{{framework.number}}">
                                                View framework details
                                            </a>
                                            <br><br>
                                        </div>
                                    </div>
                                </div>
                             {% endfor %}

                            <h3 class="govuk-heading-l result-heading" id="options">What are your options?</h3>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>Read the framework documentation for 
                                 {% for agreement in agreementsNames %}
                                    <a class='govuk-link' href="https://www.crowncommercial.gov.uk/agreements/{{agreement.number}}"> {{agreement.name}}</a>
                                {% endfor %}
                                 to understand what's available
                               
                                </li>
                                <li>
                                    <a class="govuk-link" href="https://www.crowncommercial.gov.uk/contact">Contact CCS</a>
                                    to get more information, or to start the buying process
                                </li>
                                <li>Use the buttons to start online procurement for your chosen framework</li>
                            </ul>
                            <h3 class="govuk-heading-l result-heading" id="definitions">Definitions</h3>
                              {% include "/results_page_items/definitions.html.twig" %}

                            <h3 class="govuk-heading-l result-heading" id="answers">Your answers</h3>

                              {% include "/results_page_items/answers.html.twig" with {'lotstTitle': lotstTitle} %}
                    
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}