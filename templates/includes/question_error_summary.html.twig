 <div id="error-summary" class="govuk-error-summary" role="alert" data-module="govuk-error-summary" 
style="display:{{ errorMessage is defined and showError is defined and showError is not empty  ? 'block' : 'none' }}">
  <h2 class="govuk-error-summary__title" id="error-summary-title">
    There is a problem
  </h2>
  <div class="govuk-error-summary__body">
    <ul class="govuk-list govuk-error-summary__list">
      <li id="error-summary-container">
        <span class="govuk-visually-hidden">Error:</span>
        {% if  errorMessage is defined %}
        <a href="#{{ definedAnswers is defined ? definedAnswers|first.id : journeys|first.journeyId ~ '-1'}}">
          <div id="head-error-msg" class="govuk-error-message">
              {{ errorMessage|raw }}
          </div>
        </a>
      {% endif %}
      </li>
    </ul>
  </div>
</div>