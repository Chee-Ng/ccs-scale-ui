<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{%- block title %}
            {%- if page.head.title is not empty and page.head.title != page.title -%}
                {{ page.head.title }}
            {%- else -%}
                {{ page.title|raw }} - CCS
            {%- endif -%}
        {% endblock -%}
    </title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    {% block head %}
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% endblock %}

    {% block pageMetaTags %}{{ (page is defined)? page.head.getAllMetaHtml()|raw : '' }}{% endblock %}
    <!-- <link rel="stylesheet" type="text/css" href="https://cdn.ons.gov.uk/sdc/design-system/19.3.0/css/main.css"> -->
    {% if app.environment == "prod" %}
        <link rel="stylesheet" href="{{ asset ('assets/styles/styles.min.css') }} ">
    {% else %}
        {# To debug CSS in other environments (not live), change the below to
         # styles.css instead of styles.min.css
         #}
        <link rel="stylesheet" href="{{ asset ('assets/styles/styles.min.css') }} ">
    {% endif %}
</head>

<body class="govuk-template__body">
<a class="skip-main" href="#main-content">Skip to main content</a>

<script>
    document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
</script>
{% block header %}
    {% embed '/includes/header.html.twig' %}
    {% endembed %}
{% endblock %}

{% block body %}{% endblock %}

{{ include('/includes/footer.html.twig') }}

{% block script %}
    <script type="text/javascript" src="https://cdn.ons.gov.uk/sdc/design-system/19.3.0/scripts/main.js"></script>
    <script src="{{ asset('assets/scripts/all.js') }}"></script>
    <script src="{{ asset('assets/scripts/app.js') }}"></script>
    <script>window.GOVUKFrontend.initAll();</script>
    <script src="{{ asset('assets/scripts/question_types_validators.js') }}"></script>
{% endblock %}

</body>
</html>
