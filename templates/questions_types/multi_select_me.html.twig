<div class="govuk-checkboxes">
    {% for i in definedAnswers|length %}

        {% if answer.order == definedAnswers|last.order and answer.text == "Other" %}
            <div class="govuk-radios__divider">or</div>
        {% endif %}
        <div class="govuk-checkboxes__item">
            <input class="govuk-checkboxes__input v-selector" id="{{ i.uuid }}" name="uuid" type="checkbox" value="{{ i.uuid }}">
            <label class="govuk-label govuk-checkboxes__label" for="{{ i.uuid }} id="label-{{i.uuid}}">
                {{- i.text -}}
            </label>
            {% if i.hint is defined  and i.hint is not empty %}
                <span class="govuk-hint govuk-checkboxes__hint" id="hint-{{ i.uuid }}">{{- i.hint -}}</span>
            {% endif %}
        </div>
    {% endfor %}
</div>